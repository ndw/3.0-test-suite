<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
    <t:title>p:document 024</t:title>
    <t:description>
        <p>Tests p:document with a JSON-document, checks XPath 3.1's option parameter conventions is respected: Undefined key in 'parameter'.</p>
    </t:description>

    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
            <p:output port="result"/>        

            <p:identity>
                <p:with-input select="p:document-properties-document(.)">
                    <p:document href="../documents/JSon-doc1.json" content-type="application/json" parameters="map{'undefined-key':'with-value'}"/>
                </p:with-input>
            </p:identity>

        </p:declare-step>
    </t:pipeline>
    
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
            <s:ns uri="http://www.w3.org/ns/xproc" prefix="p"/>
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="p:document-properties">The document root is not p:document-properties.</s:assert>
                    <s:assert test="p:document-properties/content-type = 'application/json'">Content-type is not 'application/json'.</s:assert>
                    <s:assert test="ends-with(p:document-properties/base-uri,'JSon-doc1.json')">Base-uri does not end with 'JSon-doc1.json'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>     
    </t:schematron>
    
</t:test>
