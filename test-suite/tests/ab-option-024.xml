<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0'
    expected="fail" code="err:XS0071">
    <t:title>Option declaration 024</t:title>
    <t:description>
        <p>Checks XS0071 (statically invalid @select) even if an option value is provided. (See #506)</p>
    </t:description>
    
    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
            <p:output port="result" />
            <p:option name="option" required="false" select="5+false()" />
            
            <p:identity>
                <p:with-input>
                    <doc>{$option}</doc>
                </p:with-input>
            </p:identity>
        </p:declare-step>
    </t:pipeline>
    <t:option name="option" select="'text'" />
</t:test>
