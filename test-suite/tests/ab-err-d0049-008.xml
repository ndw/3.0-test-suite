<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
    <t:title>Error test XD0049 008</t:title>
    <t:description>
        <p>Tests that XD0049 is not raised when @as value is syntactically wrong, but option is not used.</p>
    </t:description>
    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
            <p:output port="result"/>
            <p:option name="var" select="5" as="xs:integer-" />
            
            <p:identity>
                <p:with-input port="source">
                    <doc/>
                </p:with-input>
            </p:identity>
        </p:declare-step>
    </t:pipeline>
    
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="doc">The document root is not result.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>     
    </t:schematron>
</t:test>
