<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' 
    xmlns:err="http://www.w3.org/ns/xproc-error"
    expected="fail" code="err:XS0071">
    <t:title>Option declaration 027</t:title>
    <t:description>
        <p>Checks XS0071 (invalid xpath expression) is raised even if option value is provided. See Issue #506</p>
    </t:description>
    
    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
            <p:output port="result" />
            <p:option name="option" select="known-xpath-function()" />
            
            <p:identity>
                <p:with-input>
                    <doc>{$option}</doc>
                </p:with-input>
            </p:identity>
        </p:declare-step>
    </t:pipeline>
    <t:option name="option" select="'a value'" />    
</t:test>
