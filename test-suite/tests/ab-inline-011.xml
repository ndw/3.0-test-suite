<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
  <t:title>ab-inline-011</t:title>
  <t:description>
    <p>Tests an inline json construction (with expand-text='true')</p>
  </t:description>
  
  <t:pipeline>
    <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
      version="3.0">
      <p:output port="result" />
      
      <p:identity>
        <p:with-input select="p:document-properties-document(.)">
          <p:inline expand-text='true' document-properties="map{'content-type':'application/json'}">{{"key":"value"}}</p:inline>
        </p:with-input>
      </p:identity>
      
    </p:declare-step>
  </t:pipeline>
  
  <t:schematron>
    <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
      <s:ns uri="http://www.w3.org/ns/xproc" prefix="p"/>
      <s:pattern>
        <s:rule context="/">
          <s:assert test="p:document-properties">The document root is not p:document-properties.</s:assert>
          <s:assert test="p:document-properties/content-type = 'application/json'">Content-type is not 'application/json'.</s:assert>
        </s:rule>
      </s:pattern>
    </s:schema>     
  </t:schematron>
</t:test>
