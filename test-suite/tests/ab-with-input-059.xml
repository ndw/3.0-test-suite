<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0'
        xmlns:err="http://www.w3.org/ns/xproc-error"
        expected="fail" code="err:XS0003">
  <t:title>with-input-059</t:title>
  <t:description>
    <p>Tests p:with-input: Tests error XS0003 is raised if non-primary input port is not connected.</p>
  </t:description>
  <t:pipeline>
   
   <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
      <p:output port="result"/>
      
      <p:insert match="/doc" position="first-child">
        <p:with-input>
          <doc />
        </p:with-input>
        <p:with-input port="insertion"></p:with-input>
      </p:insert>
    </p:declare-step>
  </t:pipeline>
</t:test>
