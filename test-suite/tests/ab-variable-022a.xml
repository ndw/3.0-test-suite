<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
    <t:title>Variable declaration 022</t:title>
    <t:description>
        <p>Checks XD0008 is NOT raised if more than one document appears as connection of p:variable and @connection is false and the variable is not used.</p>
    </t:description>
    
    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
            <p:output port="result" />
            <p:variable name="var" select="5" collection="false">
                <doc />
                <doc />
            </p:variable>
            
            <p:identity>
                <p:with-input>
                    <doc />
                </p:with-input>
            </p:identity>
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="doc">The pipeline root is not doc.</s:assert>
                    <s:assert test="count(doc/node())=0">The root element does not have exactly no children.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>        
    </t:schematron>
</t:test>
