<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
  <t:title>ab-inline-005</t:title>
  <t:description>
    <p>Tests a base64 encoded text is decoded correctly for text document (charset="UTF-8")</p>
  </t:description>
  
  <t:pipeline>
    <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
      version="3.0">
      <p:output port="result" />
      
      <p:identity>
        <p:with-input >
          <p:inline encoding="base64" content-type="text/plain; charset=UTF-8">VGhpcyBpcyBhIHRlc3Qgd2l0aCDDpCDDtiDDvC4=</p:inline>
        </p:with-input>
      </p:identity>
      
      <p:wrap-sequence wrapper="result" />
    </p:declare-step>
  </t:pipeline>
  
  <t:schematron>
    <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
      <s:pattern>
        <s:rule context="/">
          <s:assert test="result">The document root is not result.</s:assert>
          <s:assert test="result/text()='This is a test with ä ö ü.'">The string is not decoded correctly.</s:assert>
        </s:rule>
      </s:pattern>
    </s:schema>     
  </t:schematron>
</t:test>
