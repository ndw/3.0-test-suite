<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0'
        xmlns:err="http://www.w3.org/ns/xproc-error"
        expected="pass">
  <t:title>with-input-045</t:title>
  <t:description>
    <p>Tests p:with-input: Combinations of implicit inline and p:documentation are allowed</p>
  </t:description>
  <t:pipeline>
    <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
      <p:output port="result"/>
           
      <p:identity>
          <p:with-input>
            <doc />
            <p:documentation>Some documentation.</p:documentation>
          </p:with-input>
      </p:identity>
      
    </p:declare-step>

  </t:pipeline>
  <t:schematron src="../schematron/ab-simple-doc.sch"/>
  
</t:test>
