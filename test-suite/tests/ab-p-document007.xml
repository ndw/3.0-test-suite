<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
    <t:title>p:document 007</t:title>
    <t:description>
        <p>Tests p:document with relative @href and 'base-uri' in document-properties: Makes sure that document-property "base-uri" is set correctly.</p>
    </t:description>

    <t:pipeline>
        <p:declare-step version="3.0" xmlns:p="http://www.w3.org/ns/xproc">
            <p:output port="result"/>        

            <p:identity>
                <p:with-input>
                    <p:document href="../documents/ab-doc.xml" document-properties="map{xs:QName('base-uri'):'http://www.w3.org'}"/>
                </p:with-input>
            </p:identity>
            
            <p:identity>
                <p:with-input select="p:document-properties-document(.)" />
            </p:identity>
        </p:declare-step>
    </t:pipeline>
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
            <s:ns uri="http://www.w3.org/ns/xproc" prefix="p"/>
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="p:document-properties">The document root is not p:document-properties.</s:assert>
                    <s:assert test="string-length(p:document-properties/base-uri) != 0">Base-uri is not set.</s:assert>
                    <s:assert test="not(starts-with(p:document-properties/base-uri,'http://www.w3.org'))">Base-uri is not set correctly</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>     
    </t:schematron>
</t:test>
