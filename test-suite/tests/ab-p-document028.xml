<?xml version="1.0" encoding="UTF-8"?>
<t:test xmlns:t='http://xproc.org/ns/testsuite/3.0' expected="pass">
    <t:title>p:document 028</t:title>
    <t:description>
        <p>Tests p:document that a binary document preserves unknown content-type.</p>
    </t:description>

    <t:pipeline>
        <p:declare-step xmlns:p="http://www.w3.org/ns/xproc"
            version="3.0">
            <p:output port="result" />
            
            <p:identity >
                <p:with-input select="p:document-properties-document(.)">
                    <p:document href="../documents/ab-doc.zip"  content-type="application/octet-stream" />
                </p:with-input> 
            </p:identity>
            
        </p:declare-step>
    </t:pipeline>
    
    <t:schematron>
        <s:schema xmlns:s="http://purl.oclc.org/dsdl/schematron">
            <s:ns uri="http://www.w3.org/ns/xproc" prefix="p"/>
            <s:pattern>
                <s:rule context="/">
                    <s:assert test="p:document-properties">There is no root element p:document-properties.</s:assert>
                    <s:assert test="p:document-properties/content-type = 'application/zip'">Content-type is not 'application/zip'.</s:assert>
                    <s:assert test="ends-with(/p:document-properties/base-uri,'/documents/ab-doc.zip')">Base-uri does not end with '/documents/ab-doc.zip'.</s:assert>
                </s:rule>
            </s:pattern>
        </s:schema>     
    </t:schematron>
    
</t:test>
